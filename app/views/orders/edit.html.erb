<h1>Editing Order</h1>

<%= form_with(model: @order, local: true) do |form| %>
<table class="table table-striped shadow rounded m-2">
  <thead class="thead-dark">
    <tr>
        <th>Product</th>
        <th>Product description</th>
        <th>Total Price</th>
        <th>quantity</th>
        <th>category</th>
        <th>Brand</th>
    </tr>
</thead>
<tbody>
    <% @order.order_products.each do |ordprod| %>
    <tr>
        <td>
            <%= ordprod.product.title %>
        </td>
        <td>
            <%= ordprod.product.description %>
        </td>
        <td>
          <%= ordprod.quantity*ordprod.product.price %>
        </td>
        <td>
          <%= ordprod.quantity %>
        </td>
        <td>
          <%= ordprod.product.category.name %>
        </td>
        <td>
          <%= ordprod.product.brand.name %>
        </td> 
    </tr>
    <% end %>
  </tbody>
</table>
      <p>
        <%= form.submit :Inorder, class: 'btn btn-primary' %>
      </p>
<% end %>

<%= link_to 'Show', @order , class: 'btn btn-outline-primary' %> |
<%= link_to 'Back', orders_path , class: 'btn btn-outline-dark' %>