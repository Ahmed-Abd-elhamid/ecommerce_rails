<div class="row justify-content-center">
<div class="col-9 border p-1 m-5">
<h1 class="text-center mt-3 m-2 bg-primary rounded shadow">Edit Order</h1>
<hr />
<div class="m-3">
<table class="table table-sm table-striped shadow rounded text-center">
  <thead class="thead-dark">
    <tr>
        <th>Product</th>
        <th>Image</th>
        <th>Total Price</th>
        <th>quantity</th>
        <th>Category | Brand</th>
    </tr>
</thead>
<tbody>
    <% if !@order.nil? %>
        <% @order.order_products.each do |ordprod| %>
        <tr>
            <td>
                <%= ordprod.product.title %>
            </td>
            <td>
                  <%= (ordprod.product.image.attached?) ? image_tag(ordprod.product.image, size: "120x100") : "No Image" %>
            </td>
            <td>
              <%= ordprod.quantity*ordprod.product.price %>
            </td>
            <td>
              <%= ordprod.quantity %>
            </td>
            <td>
              <%= ordprod.product.category.name %> | <%= ordprod.product.brand.name %>
            </td>
        </tr>
        <% end %>

      </tbody>
    </table>
            <div class="text-center h5">
                <%= link_to 'checkout', order_path(@order.id), method: :put, class: 'btn btn-outline-primary' %>
            </div>
    <% else %>
      <tr>
        <td colspan="6" class="text-center h5">No Orders</td>
      </tr>
      </tbody>
    </table>
    <% end %>
</div>

<div class="text-center mt-5 mb-1">
<%= link_to 'Order', orders_path , class: 'btn btn-outline-primary' %> |
<%= link_to 'Back', carts_path , class: 'btn btn-outline-dark' %>
</div>
</div>
</div>
