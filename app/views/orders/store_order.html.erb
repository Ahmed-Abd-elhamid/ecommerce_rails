<div class="row justify-content-center">
<div class="col-9 border p-1 m-5">
<h1 class="text-center mt-3 m-2 bg-success rounded shadow">My Orders</h1>
<hr />
<div class="m-3">
    <% if ! @orders.empty? %>
        <% @orders.each do |order| %>
<table class="table table-sm table-striped shadow rounded text-center">
  <thead class="thead-dark">
    <tr>
        <th>Product</th>
        <th>Image</th>
        <th>Total Price</th>
        <th>Quantity</th>
        <th>Available Quantity</th>
    </tr>
</thead>
<tbody>
          <% order.order_products.each do |ordprod| %>
        <tr class="">
            <td>
                <%= ordprod.product.title %>
            </td>
            <td>
                  <%= (ordprod.product.image.attached?) ? image_tag(ordprod.product.image, size: "120x100") : "No Image" %>
            </td>
            <td>
              <%= ordprod.quantity*ordprod.product.price %>
            </td>
            <td>
              <%= ordprod.quantity %>
            </td>
            <td>
              <%= ordprod.product.quantity %>
            </td>

        </tr>
        <% end %>
        <tr class="table-info">
          <td colspan="2" class="bg-secondary text-center text-white h5">State</td>
          <td colspan="3" class="text-center h5"><%= order.state %></td>
        </tr> 
          <tr>
        <th colspan="2" class="bg-primary text-center text-white h5">Action</th>
        <th colspan="3" class="text-center h5">
            <%= link_to 'Approve', approve_path(order.id), method: :put, class: 'btn btn-outline-success' %>
            <%= link_to 'Cancel', cancel_path(order.id), method: :put, class: 'btn btn-outline-danger' %>
        </th>
      <% end %>
    </tr>
        </tbody>
      </table>
    <% else %>
      <table class="table table table-striped shadow rounded text-center mb-4">
          <tr>
            <td colspan="6" class="text-center h4">No Orders</td>
          </tr>
      </table>
    <% end %>

</div>
</div>
</div>
