<div class="d-flex- flex-column">
  <div class="p-4 text-center text-white">
    <h1 class="text-center rounded mb-5 font-weight-bold app-name">SouCom</h1>
    <% if user_signed_in? %>
      <h2 class="text-center rounded mb-5 display-6">Welcome, <%= current_user.name %></h1>
      <br>
      <h5 class="lead">Enjoy The App!</h5>
      <br>
      <div class="row-fluid text-center mb-3">
        <%= link_to "Sign Out", destroy_user_session_path, :method => :delete, :class => 'btn-lg btn btn-danger' %>
      </div>
    <% else %>
      <h2 class="text-center rounded display-6">Welcome, Guest</h1>
      <br>
      <h5 class="lead">
        You must sign in or sign up before you can start shopping
      </h5>
      <br>
      <div class="row-fluid text-center mb-3 mt-5">
        <%= link_to "Sign In", new_user_session_path, :class => "btn-lg btn btn-primary shadow mr-5" %> <%= link_to "Sign Up", new_user_registration_path, :class => "btn-lg btn btn-success shadow" %>
      </div>
    <% end %>
  </div>
</div>
