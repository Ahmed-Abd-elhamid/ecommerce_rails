<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EcommerceRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'products', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'welcome', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'jquery.min', 'data-turbolinks-track'=> true %>
    <%= javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js' %>
  </head>

  <body class="d-flex flex-column justify-content-between">
    <header class="">
      <%= render 'layouts/navigation' %>
      <%= render 'layouts/messages' %>
    </header>
    <div class="">
      <%= yield %>
    </div>
    <footer class="bg-dark mt-5">
      <%= render 'layouts/foot' %>
    </footer>
  </body>

  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

  <script>
    var x = window.matchMedia("(max-width: 767px)")

    var path = window.location.pathname

    if(path.includes("welcome") || path == '/') {
      $('body').addClass("welcome");
    }
    
    function showSidebar(){
      $('#sidebar-wrapper').removeClass('d-none')
    }

    function closeSidebar(){
      $('#sidebar-wrapper').addClass('d-none')
    }

    function checkDimensions(){
      if(x.matches) {
        closeSidebar()
      }
    }
  </script>
</html>

