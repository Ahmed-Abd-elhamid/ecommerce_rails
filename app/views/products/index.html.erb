<div class="products-page container-fluid ">
    <div class="row m-1 justify-content-center">
        <%= render 'layouts/sidebar'%>
        <div class="main-content col-md-8 ml-3 p-3">
                <div class="d-flex flex-wrap border p-2 justify-content-center">
                    <span class="px-2 py-1 align-self-center mr-3 d-md-none btn btn-outline-primary" onclick="showSidebar()">
                        <i class="fas fa-filter"></i>
                    </span>
                    <% if current_user && current_user.seller_role? %>
                        <div class="mr-3 align-self-center">
                            <%= link_to "Add Product", new_product_path, class: 'd-inline btn-lg btn btn-outline-primary' %>
                        </div>
                    <% end %>
                    <%# Search %>
                    <%= form_tag products_path, :method => "get", class: 'search-form flex-nowrap form-inline justify-content-around' do %>
                        <%= text_field_tag :search, params[:search], class: 'form-control mx-1', placeholder: 'Search' %>
                        <%= submit_tag "Search", class: 'btn btn-dark', onclick: 'checkDimensions()' %>
                    <% end %>
                </div>
            <div class="container mt-1 shadow p-2">
                <div class="products mb-5">
                    <% if @products.present? %>
                        <%= render @products %>
                    <% else %>
                        <p style="text-align: center">No Products Found</p>
                    <% end %>
                </div>
            </div>
            <% if @products.present? %>
                <div class="apple_pagination border shadow rounded mt-5 p-1">
                    <%= will_paginate @products%>
                </div>
            <% end %>

        </div>
    </div>
</div>