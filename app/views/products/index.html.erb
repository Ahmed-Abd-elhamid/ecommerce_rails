<div class="container-fluid">
    <div class="row m-1">
        <%= render 'layouts/sidebar'%>
        <div class="main-content col-md-10">
            <div class="container">
                    <div class="d-flex justify-content-center">
                    <% if can? :create, Product %>
                        <div class="mr-3 mt-2">
                            <%= link_to "Add Product", new_product_path, class: 'd-inline btn btn-outline-primary' %>
                        </div>
                    <% end %>
                    <%# Search %>
                    <%= form_tag products_path, :method => "get", class: 'form-inline justofy-content-around' do %>
                        <%= text_field_tag :search, params[:search], class: 'form-control mx-1', placeholder: 'Search' %>
                        <%= submit_tag "Search", class: 'btn btn-dark' %>
                    <% end %>
                </div>
                <hr>
                <div class="products">
                    <% if @products.present? %>
                        <%= render @products %>
                    <% else %>
                        <p style="text-align: center">No Products Found</p>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>