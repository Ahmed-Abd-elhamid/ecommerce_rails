<%= devise_error_messages! %>
<div class="border-form-div text-left">
  <h2 class="bg-dark text-white shadow rounded mb-4 p-1 text-center">Sign up</h2>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
     <%= f.label :name %><br />
    <%= f.text_field :name, :autofocus => true, :placeholder => 'Full Name' %>
       <%= f.label :email %><br />

    <%= f.email_field :email, :placeholder => 'Email address' %>
       <%= f.label :password %><br />

    <%= f.password_field :password, :placeholder => 'Password' %>
       <%= f.label :password_confirmation %><br />

    <%= f.password_field :password_confirmation, :placeholder => 'Password confirmation' %>
       <%= f.label :avatar %><br />

    <%= f.file_field :avatar, :placeholder => 'Avatar'%>
    <hr>
    <%= f.submit "Sign up",:class=>'btn btn-primary mb-2' %>
  <% end %>
  <p>already registered?
  <%= render "devise/shared/links" %></p>
</div>