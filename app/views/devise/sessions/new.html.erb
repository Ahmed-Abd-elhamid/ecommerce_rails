

<div class="border-form-div text-left">
  <h2 class="bg-dark text-white shadow rounded mb-4 p-1 text-center">Sign in</h2>
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
   <%= f.label :email %><br />
    <%= f.email_field :email, :placeholder => 'Email address', :autofocus => true %>
     <%= f.label :password %><br />
    <%= f.password_field :password, :placeholder => 'Password' %>
     <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
    <hr> 
    <%= f.submit "Sign in", :class=>'btn btn-primary mb-2 ' %>
  <% end %>
  <p class="mb-4"> Not a member?<%= render "devise/shared/links" %></p>
</div>